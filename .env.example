# OpenTelemetry Configuration
# Set to true to enable telemetry export to OpenObserve
OTEL_ENABLED=true

# OpenObserve endpoint for OTLP data
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:5080/api/default

# Authorization header for OpenObserve (Basic auth)
# Format: key=value (e.g., Authorization=Basic <base64-encoded-credentials>)
OTEL_EXPORTER_OTLP_HEADERS=Authorization=Basic cm9vdEBleGFtcGxlLmNvbTo2WUE2QzFLSEMwalBNTUt1

# Service name to identify this application in traces
OTEL_SERVICE_NAME=hornet2

# Logging Configuration
# Controls log levels for different modules
# Format: module1=level1,module2=level2
# Levels: trace, debug, info, warn, error
RUST_LOG=hornet2=debug,tower_http=debug

# OpenObserve Browser RUM Configuration
# Set to 'true' to enable frontend observability (RUM + Logs)
VITE_OPENOBSERVE_ENABLED=true

# OpenObserve endpoint
VITE_OPENOBSERVE_ENDPOINT=

# OpenObserve client token (RUM token from OpenObserve UI)
VITE_OPENOBSERVE_CLIENT_TOKEN=rum0aQGdEExLop9LaLo

# OpenObserve organization identifier
VITE_OPENOBSERVE_ORG=default

# Application metadata
VITE_OPENOBSERVE_APP_ID=hornet2-ui
VITE_OPENOBSERVE_SERVICE=hornet2-ui

# Environment (development, staging, production)
VITE_OPENOBSERVE_ENV=development

# API Version
VITE_OPENOBSERVE_API_VERSION=v1

# Privacy level: 'allow', 'mask-user-input', or 'mask'
VITE_OPENOBSERVE_PRIVACY_LEVEL=allow
